#include<stdio.h>
main()
{
	int i,n,evensum,oddsum,diff;
	scanf("%d",&n);
	i=1;
	evensum=0;
	oddsum=0;
	while(i<=n)
	{
		printf("\n%d",&i);
		if(i%2==0)
		{
		evensum=evensum+i;
	    }
		else
		{
		oddsum=oddsum+i;	
		}
		i++;
		printf("evensum:\n%d",evensum);
		printf("oddsum:\n%d",oddsum);
		diff=evensum-oddsum;
		printf("diff:%d",diff);
	}
}
